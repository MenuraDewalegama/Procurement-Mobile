<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.orderhistory.OrderHistoryFragment">

    <TextView
        android:id="@+id/order_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/recently_requested_orders"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/ordered_list_in_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/order_history_title"/>

</RelativeLayout>